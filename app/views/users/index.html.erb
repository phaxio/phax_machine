<h1 class="page_title">Manage Users</h1>

<div class="page_actions">
  <%= link_to "Add User", new_user_path, class: "btn btn-primary" %>
</div>

<table class="table users-table">
  <thead>
    <th>Edit</th>
    <th>Emails</th>
    <th>Fax Number</th>
    <th>Delete User</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr data-user-id="<%= user.id %>">
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <td>
          <%= link_to user_path(user) do %>
            <% user.user_emails.each do |user_email| %>
              <span class="user-email"><%= user_email.email %></span>
            <% end %>
          <% end %>
        </td>
        <td><%= user.fax_number %></td>
        <td><%= link_to user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} do %>
          <i class="glyphicon glyphicon-trash"></i>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>