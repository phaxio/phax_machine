<%= form_for user do |f| %>
  <% if user.errors.any? %>
    <div class="text-danger">
      The following errors occurred when saving the user:

      <ul>
        <% user.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :emails %>
    <div id="userEmailList">
      <%= f.fields_for :user_emails do |email| %>
        <div class="input-group">
          <%= email.hidden_field :_destroy, class: 'destroy-field' %>
          <%= email.email_field :email, required: true, class: 'form-control' %>
          <span class="input-group-btn">
            <a class="btn btn-secondary btn-remove-email">
              <i class="glyphicon glyphicon-trash"></i>
            </a>
          </span>
        </div>
      <% end %>
    </div>
    <br>
    <a id="addUserEmail" class="btn btn-sm btn-success">Add</a>
  </div>

  <div class="form-group">
    		<small class="text-muted">
		      <p>The fax number(s) in your Phaxio account to be used by this user for sending and receiving faxes.
		      Should be in e164 format (i.e. +15558675309).</p>
		      <p>Click the button to the left to designate a primary number. The fax number in your Phaxio account you set as your primary number is used as the Caller ID by this user for sending and receiving faxes.</p>
		    </small>
    <%= f.label :user_fax_numbers, 'Fax Numbers' %>
    <div id="userFaxNumberList">
		    <%= f.fields_for :user_fax_numbers do |fax_number| %>
		    	<div class="input-group">
		    	<%= fax_number.hidden_field :_destroy, class: 'destroy-field' %>
		    		<div class="radio">
				    	<% if fax_number.object.primary_number == true %>
				    		<%= fax_number.radio_button :primary_number, true, checked: true, class: 'radio-btn' %>
				    	<% else %>
				    		<%= fax_number.radio_button :primary_number, false, checked: false, class: 'radio-btn' %>
				    	<% end %>
			    	</div>
			    	<%= fax_number.phone_field :fax_number, required: true, class: 'form-control' %>
			    	<span class="input-group-btn">
		          <a class="btn btn-secondary btn-remove-tel">
		            <i class="glyphicon glyphicon-trash"></i>
		          </a>
		        </span>
		      </div>
	    	<% end %>

    </div>
	  <br>
    <a id="addUserFaxNumber" class="btn btn-sm btn-success">Add</a>
  </div>

  <%= f.submit 'Submit', id: 'submit-button', class: 'btn btn-primary' %>
<% end %>
